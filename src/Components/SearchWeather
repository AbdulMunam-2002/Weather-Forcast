// components/SearchWeather.js
import React, { useState } from 'react';

const SearchWeather = () => {
  const [searchCity, setSearchCity] = useState('');

  const handleSearch = () => {
    // Simulating a basic search logic (no API call)
    if (searchCity.trim() !== '') {
      // Log the searched city for simplicity
      console.log('Searched City:', searchCity);
    }
  };

  return (
    <div className="search-map-container">
      <div className="search-bar">
        <input
          type="text"
          placeholder="Enter city name"
          value={searchCity}
          onChange={(e) => setSearchCity(e.target.value)}
        />
        <button onClick={handleSearch}>Search</button>
      </div>
      <div style={{ height: '400px', width: '100%', border: '1px solid #ccc', marginTop: '10px' }}>
        {/* Placeholder for the map (No actual map library used for simplicity) */}
        Map Placeholder
      </div>
    </div>
  );
};

export default SearchWeather;
